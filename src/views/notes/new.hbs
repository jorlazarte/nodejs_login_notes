
{{#each error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{message}}

  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}
<div class="col-md-4 mx-auto">
	<div class="card">
		<div class="card-header">
			<h3>New Note</h3>
		</div>
		<div class="card-body">
			<form action="/notes/add" method="POST">
				<div class="form-group mt-3">
					<input type="text" name="title" class="form-control" placeholder="Title" autofocus value="{{title}}" />
				</div>
				<div class="form-group mt-3">
					<textarea name="description" class="form-control" placeholder="Description">{{description}}</textarea>
				</div>
				<div class="form-group mt-3">
					<a class="btn btn-primary btn-block" href="/notes">Volver</a>
					<button class="btn btn-primary btn-block" type="submit">Guardar</button>
				</div>
			</form>
		</div>
	</div>
</div>